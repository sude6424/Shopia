@using Shopia.Application.DTO_s.AccountDTO_s
@model ResultProfileDTO

<div class="row px-xl-5">
    <div class="col">
        <div class="nav nav-tabs justify-content-center border-secondary mb-4">
            <a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Bilgiler</a>
            <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-2">Siparişler</a>
            <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-3">Şifreyi Değiştir</a>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="tab-pane-1">
                <form action="/Account/Profile" method="post">
                    <div align="center">
                        <table>
                            <tr>
                                <td><label for="name">Ad:</label></td>
                                <td><input type="text" id="name" name="name" value="@Model.Name" /></td>
                            </tr>
                            <tr>
                                <td><label for="surname">Soyad:</label></td>
                                <td><input type="text" id="surname" name="surname" value="@Model.Surname" /></td>
                            </tr>
                            <tr>
                                <td><label for="email">Email:</label></td>
                                <td><input type="text" id="email" value="@Model.Email" readonly /></td>
                            </tr>
                            <tr>
                                <td><label for="phonenumber">Telefon:</label></td>
                                <td><input type="text" id="phonenumber" value="@Model.PhoneNumber" readonly /></td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center">
                                    <input type="submit" value="Kaydet" class="btn btn-primary px-3" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </form>
            </div>

            <div class="tab-pane fade" id="tab-pane-2">
                <div class="col-lg-12 table-responsive mb-5">
                    <table class="table table-bordered text-center mb-0">
                        <thead class="bg-secondary text-dark">
                            <tr>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Toplam Fiyat</th>
                                <th>Ürünler</th>
                                <th>Fatura</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">
                            @if (Model.Orders != null)
                            {
                                @foreach (var item in Model.Orders)
                                {
                                    <tr>
                                        <td class="align-middle">@item.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td class="align-middle">@item.OrderStatus</td>
                                        <td class="align-middle">&#8378;@item.TotalAmount</td>
                                        <td class="align-middle">
                                            @foreach (var orderitem in item.OrderItems)
                                            {
                                                @orderitem.Product.ProductName
                                            }
                                        </td>



                                        <td class="align-middle"><button class="btn btn-sm btn-primary"><i class="fa fa-times"></i></button></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td class="align-middle" colspan="5">Sipariş bulunmamaktadır</td>
                                </tr>


                            }



                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="tab-pane-3">
                <form action="/Account/ChangePassword" method="post">
                    <div align="center">
                        <table>
                            <tr>
                                <td><label for="password">Mevcut Şifre:</label></td>
                                <td><input type="password" id="password" name="password" required /></td>
                            </tr>
                            <tr>
                                <td><label for="newpassword">Yeni Şifre:</label></td>
                                <td><input type="password" id="newpassword" name="newpassword" required /></td>
                            </tr>
                            <tr>
                                <td><label for="newpasswordconfirm">Yeni Şifre Tekrar:</label></td>
                                <td><input type="password" id="newpasswordconfirm" name="newpasswordconfirm" required /></td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center">
                                    <input type="submit" value="Kaydet" class="btn btn-primary px-3" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>