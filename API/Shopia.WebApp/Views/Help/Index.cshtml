<!-- Contact Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Destek İçin İletişime Geçin</span></h2>
    </div>
    <div class="row px-xl-5" style="justify-content:center;">
        <div class="col-lg-7 mb-5">
            <div class="contact-form">
                <div id="success"></div>
                <form method="post" action="/Help/CreateHelp" name="sentMessage" id="helpForm" novalidate="novalidate">
                    <div class="control-group">
                        <input type="text" class="form-control" id="name" placeholder="Adınız"
                               required="required" data-validation-required-message="Lütfen adınızı girin" name="name"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" id="email" placeholder="Mailiniz"
                               required="required" data-validation-required-message="Lütfen mailinizi girin" name="email" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control" id="subject" placeholder="Konu"
                               required="required" data-validation-required-message="Lütfen konuyu girin" name="subject" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control" rows="6" id="message" placeholder="Destek istediğiniz konuyu belirtin."
                                  required="required"
                                  data-validation-required-message="Lüfen mesajınızı girin" name="message"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" id="help">
                            Destek Talebi Oluştur
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>
<!-- Contact End -->